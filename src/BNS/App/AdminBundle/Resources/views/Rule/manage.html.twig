<button class="btn add-rule">Ajouter une règle à ce groupe</button>

<form action="{{ path('BNSAppAdminBundle_rule_manage') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">			
	<fieldset>
		<div class="control-group">
			<label class="control-label"> {{ form_label(form.rank_unique_name) }}</label>
			<div class="controls">	
				{{ form_widget(form.rank_unique_name,{'attr': {'class': 'span3'}}) }}
			</div>
		</div>
		<div class="control-group">
			<label class="control-label"> {{ form_label(form.who_group_id) }}</label>
			<div class="controls">	
				{{ form_widget(form.who_group_id,{'attr': {'class': 'span3'}}) }}
			</div>
		</div>
		<div class="control-group">
			<label class="control-label"> {{ form_label(form.rule_where_group_type_id) }}</label>
			<div class="controls">	
				{{ form_widget(form.rule_where_group_type_id,{'attr': {'class': 'span3'}}) }}
			</div>
		</div>
		<div class="control-group">
			<label class="control-label"> {{ form_label(form.rule_where_belongs) }}</label>
			<div class="controls">	
				{{ form_widget(form.rule_where_belongs) }}
			</div>
		</div>
		<div class="control-group">
			<label class="control-label"> {{ form_label(form.state) }}</label>
			<div class="controls">	
				{{ form_widget(form.state) }}
			</div>
		</div>

	{{ form_rest(form) }}
	<input type="submit" />
</form>