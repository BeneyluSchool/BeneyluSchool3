<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="BNS\App\BlogBundle\Form\Model\BlogArticleFormModel">
        <property name="title">
            <constraint name="NotBlank">
				<option name="message">Le titre ne doit pas être vide !</option>
			</constraint>
			<constraint name="MaxLength">
				<option name="limit">255</option>
				<option name="message">Le titre est trop grand</option>
			</constraint>
			<constraint name="MinLength">
				<option name="limit">3</option>
				<option name="message">Le titre est trop petit (3 caractères minimum)</option>
			</constraint>
        </property>
		<constraint name="Callback">
			<option name="methods">
				<value>isStatusExists</value>
				<value>isProgrammationValid</value>
			</option>
		</constraint>
    </class>
	
	<class name="BNS\App\CoreBundle\Model\BlogCategory">
        <property name="title">
            <constraint name="NotBlank">
				<option name="message">Le nom de la catégorie ne doit pas être vide !</option>
			</constraint>
        </property>
    </class>
</constraint-mapping>