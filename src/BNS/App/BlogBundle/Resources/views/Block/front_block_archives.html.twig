{% trans_default_domain "BLOG" %}
{% if blog.getArchives()|length > 0 %}
  <h2 class="block-title">{% trans %}TITLE_ARCHIVE{% endtrans %}</h2>
  <div class="block-archive">
    {% if archive_month is defined %}
      <a class="list-btn" href="{{ path('BNSAppBlogBundle_front') }}">{% trans %}LINK_ALL_ARTICLES{% endtrans %}</a>
    {% endif %}
    <ul>
      {% for label,item in blog.getArchives() %}
        <li {% if archive_month is defined and archive_month == item['month'] and archive_year == item['year'] %}class="selected"{% endif %}><a class="list-btn" href="{{ path('blog_articles_from_archives', {'month': item['month'], 'year': item['year']}) }}">{{ label }} ({{ item['count'] }})</a></li>
      {% endfor %}
    </ul>
  </div>
  <div class="clearfix"></div>
{% endif %}
