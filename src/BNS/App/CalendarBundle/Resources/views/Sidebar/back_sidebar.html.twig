{% if section == 'new_event' %}
	<div class="section active">
		Nouvel évènement
		<span class="shadow-section"></span>
	</div>
	<div class="title-container">
		<div class="title active border-blue">Liste des agendas <span class="square icon-arrow"></span></div>
		<div class="content-title agenda-selector">
			<ul>
				{% for agenda in agendas %}
					<li class="text-row">
						<div class="content-agenda {{ agenda.getColorClass() }}">
							<img src="/medias/images/calendar/color-picker-bg-transparent.png" />
							<span id="{{ agenda.getId() }}" class="color-img"></span>
							<span class="agenda-title">Agenda de {{ agenda.getTitle() }}</span>
						</div>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
{% endif %}

{% if section == 'home' %}
	<div class="section active">
		Calendrier
		<span class="shadow-section"></span>
	</div>
	<div class="title-container">
		<div class="content-title">
			<div id="dp-location" class="datepicker-back">
				<div id="hdtxtshow" class="date-picker-position"></div>
			</div>
		</div>
	</div>
	<div class="title-container">
		<div class="title active border-blue">Agendas <span class="square icon-arrow"></span></div>
		<div class="content-title agenda-selector agenda-filter-container">
			<div class="loader loader-h"></div>
			<ul>
				{% for agenda in agendas %}
					<li>
						<div class="content-agenda {{ agenda.getColorClass() }}">
							<select class="colorpicker"  name="colour">
								{% for id, value in colors %}
									<option value="{{ value }}">{{ id }}</option>
								{% endfor %}
							</select>
							<span id="{{ agenda.getId() }}" class="color-img"></span>
							<span class="agenda-title">Agenda de {{ agenda.getTitle() }}</span>
						</div>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
{% else %}
	<div class="container-section">
		<div class="section">
			<a href="{{ path('BNSAppCalendarBundle_back') }}">Calendrier</a>
		</div>
	</div>
{% endif %}
<div class="sidebar-shadow"></div>