<div class="comment" id="comment-{{ comment.getId() }}">
	<div class="vertical-separator {{ comment.getStatus()|lower }}"></div>
	<div class="loader loader-h"></div>
	<div class="comment-header">
		<img src="{{ avatar(comment.getAuthor(), 'thumbnail') }}" />
		<p class="subject">{{ comment.getAuthor().getFullName() }}</p>
		<p class="date">Envoy√© {{ date_from_now(comment.getDate(), false, true) }}</p>
		<div class="comment-moderation">
			{% include 'BNSAppCommentBundle:Back:comment_moderation.html.twig' %}
		</div>
		<div class="clearfix"></div>
	</div>
	<div class="comment-content">
		{{ comment.getContent()|nl2br }}
	</div>
</div>