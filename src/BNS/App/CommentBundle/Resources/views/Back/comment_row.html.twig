{% trans_default_domain "COMMENT" %}

<div class="comment status-{{ comment.getStatus()|lower }}" id="comment-{{ comment.getId() }}">
	<div class="vertical-separator {{ comment.getStatus()|lower }}"></div>
	<div class="loader loader-h"></div>
	<div class="comment-header">
		<div class="comment-moderation">
			{% include 'BNSAppCommentBundle:Back:comment_moderation.html.twig' %}
		</div>
		<div class="informations">
			<img src="{{ avatar(comment.getAuthor(), 'thumbnail') }}" />
			<p class="subject">{{ comment.getAuthor().getFullName() }}</p>
			<p class="date">{{ 'SEND_DATE'|trans({'%date%': date_from_now(comment.getDate(), false, true)}) |desc('Envoy√© %date%') |raw }}</p>
			{% set commentRoute = comment.getObjectRoute() %}
			<p class="object"><a href="{{ path(commentRoute[0], commentRoute[1]) }}">{{ comment.getObject() }}</a></p>
		</div>
		<div class="clearfix"></div>
	</div>
	<div class="comment-content">
		{{ comment.getContent()|nl2br }}
	</div>
</div>