{% trans_default_domain "COMMENT" %}
{% import 'BNSAppCoreBundle:Macros:forms.html.twig' as forms %}

{% extends extendsView %}

{% block comment_form %}
	<div class="item form comment-form">
		<h3>{{ 'TITLE_COMMENT_CONTENT'|trans |desc('Contenu du commentaire') }}</h3>

		{# Content #}
		<div>
			{{ form_widget(form.content) }}
			{{ forms.errors(form.content) }}
		</div>

		<div>{{ form_rest(form) }}</div>
	</div>
{% endblock %}