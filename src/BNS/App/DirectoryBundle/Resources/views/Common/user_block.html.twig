{% if is_userpicker == false %}
        {% include 'BNSAppDirectoryBundle:Common:bns_user_block.html.twig' with {'user': user, 'is_userpicker': is_userpicker, 'withLink' : withLink} %}
{% elseif is_userpicker %}
        {% if user_ids_hide is defined and user_ids_hide|length > 0 %}
                {% set hide = false %}
                {% for user_id in user_ids_hide %}
                       {% if user.getId() == user_id %}
                            {% set hide = true %}
                       {% endif %}
                {% endfor %}
                {% if not hide %}
                        {% include 'BNSAppDirectoryBundle:Common:bns_user_block.html.twig' with {'user': user, 'is_userpicker': is_userpicker} %}
                {% endif %}
                
        {% else %}
                {% include 'BNSAppDirectoryBundle:Common:bns_user_block.html.twig' with {'user': user, 'is_userpicker': is_userpicker} %}
        {% endif %}
{% endif %}