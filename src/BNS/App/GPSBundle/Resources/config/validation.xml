<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="BNS\App\GPSBundle\Model\GpsPlace">
        <property name="label">
            <constraint name="NotBlank">
				<option name="message">Veuillez saisir un nom de lieu</option>
			</constraint>
        </property>
		<property name="address">
            <constraint name="NotBlank">
				<option name="message">Veuillez saisir une adresse</option>
			</constraint>
        </property>
		<property name="gps_category_id">
            <constraint name="NotBlank">
				<option name="message">Veuillez choisir une categorie</option>
			</constraint>
        </property>
    </class>

    <class name="BNS\App\GPSBundle\DataReset\ChangeYearGPSDataReset">
        <property name="choice">
			<constraint name="NotBlank">
				<option name="message">Vous devez s√©lectionner une des options</option>
			</constraint>
            <constraint name="Choice">
                <option name="choices">
                    <value>KEEP</value>
                    <value>DELETE</value>
                </option>
                <option name="message">Votre choix est invalide</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>