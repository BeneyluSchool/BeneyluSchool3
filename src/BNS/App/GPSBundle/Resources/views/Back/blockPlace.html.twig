<div class="item">
	<div class="vertical-separator {{ place.isActive ? "green" : "orange"}}"></div>
	<div class="header">
		<div class="buttons-container">
			<a href="{{ path('BNSAppGPSBundle_back_place_sheet',{'slug' : place.slug })}}" class="btn bns-notice btn-16 small right btn-visualisation">
				<span class="icons-16 arrow-right-icon right"></span>
				<strong>Voir la fiche</strong>
			</a>
		</div>
		<h3>{{ place.label }}</h3>
		<div class="categories">
			<ul>
				<li>
					{{ place.getGpsCategory.label }}
				</li>
			</ul>
		</div>
	</div>

</div>
