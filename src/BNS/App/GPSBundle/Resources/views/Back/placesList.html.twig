

{% for place in places %}
	{% if loop.first %}
		<div class="layer"></div>
		<div class="item-list-container">
	{% endif %}
		{% include "BNSAppGPSBundle:Back:blockPlace.html.twig" with {'place' : place} %}
	{% if loop.last %}
		</div>
	{% endif %}
{% else %}
	{% include "BNSAppMainBundle:NoInformation:index.html.twig" with {'text' : "Vous n'avez pas encore de lieu dans votre GPS", button : { 'text' : "Ajouter un lieu" , 'link' : path('BNSAppGPSBundle_back_new_place') }} %}
{% endfor %}
