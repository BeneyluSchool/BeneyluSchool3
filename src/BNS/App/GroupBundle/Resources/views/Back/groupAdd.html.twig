{% extends 'BNSAppGroupBundle:Back:layout.html.twig' %}

{% block header %}
	
	<div class="header-buttons">
		<div class="inner-header">
			<div class="container container-fluid">
				<div class="row-fluid">
					<div class="align-left">
						<a href="{{ path('BNSAppGroupBundle_group_list' , {'type' : groupType.type }) }}" class="btn bns-notice btn-24 medium"><span class="icons-24 back-icon"></span><strong>Retour</strong> Ã  la liste</a>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock header %}

{% block content %}
	
	<div class="news-title">
		<h1 class="dashboard">Ajouter un(e) {{ groupType.label }}</h1>
	</div>
	


	<div class="span16">
		<br />
		<form action="" method="post" id ="group-add-form" {{ form_enctype(form) }}>

			{{ form_widget(form.label, { 'attr': {'placeholder': "Nom du groupe"} }) }}
			{{ form_rest(form) }}
			
			<a id="group-add-submit" href="#" class="btn bns-success validate-small btn-16">
				<span class="icons-16 validate-icon"></span>
				<strong>Valider</strong>
			</a>

		</form>
	</div>

{% endblock %}