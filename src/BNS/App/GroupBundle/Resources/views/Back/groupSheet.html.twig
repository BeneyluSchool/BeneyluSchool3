{% extends 'BNSAppGroupBundle:Back:layout.html.twig' %}

{% block header %}
	
	<div class="header-buttons">
		<div class="inner-header">
			<div class="container container-fluid">
				<div class="row-fluid">
					<div class="align-left">
						<a href="{{ path('BNSAppGroupBundle_group_list' , {'type' : groupType.type }) }}" class="btn bns-notice btn-24 medium"><span class="icons-24 back-icon"></span><strong>Retour</strong> Ã  la liste</a>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock header %}

{% block content %}
	
	<div class="news-title">
		<h1 class="dashboard">{{ group.label }}</h1>
	</div>
	
	{% for group in groups %}
		{% if loop.first %}
			<table class="table table-striped group-list">
				<tbody>
		{% elseif loop.last %}
			
						
		{% endif %}

		<tr>
			<td><a href="#">{{ group.label }}</a></td>
		</tr>
						
						
	{% else %}
		<div class="alert">
			Ce groupe ne contient pas d'autre groupe.
		</div>
	{% endfor %}

{% endblock %}