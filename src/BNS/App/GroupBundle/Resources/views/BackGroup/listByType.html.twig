{% trans_default_domain "GROUP" %}
{% extends 'BNSAppGroupBundle:Back:layout.html.twig' %}
{% set isRole = groupType.simulateRole %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('medias/js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function ()
        {
            $('#groups').dataTable(
                    {
                        "bJQueryUI": true,
                        "sPaginationType": "full_numbers",
                        "sAjaxSource": "{{ path('BNSAppGroupBundle_group_list_by_type_ajax' , {'groupTypeType' : groupType.type } ) }}",
                        "bServerSide": true{#,
                        A CORRIGER
                        "oLanguage": {
                    "sUrl": "/medias/js/datatable/french.txt"
                }#}
                    });
        });
    </script>
{% endblock %}
    
{% block css %}
    {{ parent() }}
    <link title="style" type="text/css" rel="stylesheet" href="{{ asset('medias/css/dataTable_jui.css') }}" />
{% endblock %}

{% block header %}

{% endblock header %}

{% block content %}
	
	<div class="news-title">
		<h1 class="dashboard">{{ 'TITLE_LIST_OF_GROUP'|trans({'%group%': groupType.label}) |desc('Liste de : %group%') }}</h1>
	</div>
    <div class="datatable">
        <table cellpadding="0" cellspacing="0" border="0" class="display" id="groups">
            <thead>
            <tr>
                <th>{{ 'PLACEHOLDER_GROUP_NAME'|trans |desc("Nom du groupe") }}</th>
                <th>{{ 'ACTIONS'|trans |desc('Actions') }}</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
{% endblock %}