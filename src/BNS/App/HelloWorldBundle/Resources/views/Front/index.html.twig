{% extends 'BNSAppHelloWorldBundle:Front:layout.html.twig' %}

{% block javascripts %}
	{{ parent() }}	
{% endblock %}


	
{% block css %}
	{{ parent() }}
{% endblock %}

{% block content %}

	
	<h1>{% trans %}Front.Index.title{% endtrans %}</h1>

	<p>{% trans %}Front.Index.description{% endtrans %}</p>
	
	<div class="alert alert-success">
		Vous êtes : {{ app.user.fullName  }}
	</div>
	
	{% include 'BNSAppMainBundle::notice.html.twig' %}

		<div class="span5">
			
			<p>Vous naviguez dans le contexte <strong>{{ context.group_name }}</strong> dans lequel vous avez les droits :</p>

			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>Permission Unique Name</th>
					</tr>
				</thead>
				<tbody>
					{% for permission in context.permissions %}
						<tr>
							<td>{{ permission }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			
			<p> et le ou les <strong>rôles</strong></p>
			
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>Role unique name</th>
					</tr>
				</thead>
				<tbody>
					{% for role in context.roles %}
						<tr>
							<td>{{ role }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

		</div>

		<div class="span5">
			
			<div class="row">
				<div class="well span5">
					<h3>Exemples d'actions</h3>
				</div>
				<div class="well span5">
					<a class="btn btn-danger" href="{{ path('BNSAppHelloWorldBundle_front_forbidden') }}">
						Action interdite
					</a>
				</div>
				<div class="well span5">
					<form action="{{ path('BNSAppHelloWorldBundle_front_email') }}" method="post">
						<input type="email" name="email" />
						<input type="submit" class="btn btn-primary" value="Envoyer un email d'essai" />
					</form>
				</div>
				<div class="well span5">
					<a class="btn btn-primary" href="{{ path('BNSAppHelloWorldBundle_front_notifications') }}">
						Gestion des notifications
					</a>
					<a class="btn btn-primary" href="{{ path('BNSAppHelloWorldBundle_front_notifications_list') }}">
						Voir les notifications
					</a>
				</div>
				<div class="well span5">
					<h4>Changement de langue</h4>
					<br />
					<p>
						Votre langue actuelle : 
						{% if locale == "fr" %}
							Français
						{% else %}
							Anglais
						{% endif %}
					</p>
					
					<br />
					<a href="{{ path('BNSAppHelloWorldBundle_front_change_culture', { 'culture': 'en' }) }}" class="btn btn-info">
						Anglais
					</a>
					<a href="{{ path('BNSAppHelloWorldBundle_front_change_culture', { 'culture': 'fr' }) }}" class="btn btn-info">
						Français
					</a>
				</div>
					
				<div class="well span5">
					<a class="btn btn-primary" id=".call_ressource" href="#">
						Appel des ressources
					</a>
				</div>
					
					
		</div>
{% endblock %}