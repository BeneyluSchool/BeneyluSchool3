<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="BNS\App\HomeworkBundle\Model\Homework">
        <property name="name">
            <constraint name="NotBlank">
                    <option name="message">Le nom ne doit pas être vide !</option>
            </constraint>
        </property>
        <property name="date">
            <constraint name="NotBlank">
                    <option name="message">Le date ne doit pas être vide !</option>
            </constraint>
        </property>
        <property name="subject_id">
            <constraint name="NotBlank">
                    <option name="message">La matière ne peut pas être vide !</option>
            </constraint>
        </property>
        <property name="recurrence_type">
            <constraint name="NotBlank">
                    <option name="message">Le type de récurrence doit être sélectionné !</option>
            </constraint>
        </property>
    </class>
	
</constraint-mapping>