<div class="title-container">
    <div class="title active border-blue">{% trans %}TITLE_DAYS{% endtrans %}<span class="square icon-arrow"></span></div>
    <div class="content-title">
        <ul id="weekdays" class="weekdays">
            <div class="loader loader-h"></div>
            {% if 'MO' in preferences.getDays() %}<li class="day-filter-list"><div class="monday">{% trans %}CHOICE_MONDAY{% endtrans %} <span id="listcheck_MO" class="day-filter select {% if 'MO' in app.session.get('weekdays-session') %}checked{% endif %}"></span></div></li>{% endif %}
            {% if 'TU' in preferences.getDays() %}<li class="day-filter-list"><div class="tuesday">{% trans %}CHOICE_TUESDAY{% endtrans %} <span id="listcheck_TU" class="day-filter select {% if 'TU' in app.session.get('weekdays-session') %}checked{% endif %}"></span></div></li>{% endif %}
