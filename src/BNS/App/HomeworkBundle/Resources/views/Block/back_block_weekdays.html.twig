            {% if 'TH' in preferences.getDays() %}<li class="day-filter-list"><div class="thursday">{% trans %}CHOICE_THURSDAY{% endtrans %} <span id="listcheck_TH" class="day-filter select {% if 'TH' in app.session.get('weekdays-session') %}checked{% endif %}"></span></div></li>{% endif %}
