{% extends '::base.html.twig' %}

{% block css %}
    {{ parent() }}
    <link href="{{ asset('/medias/css/logon/front.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('/medias/css/logon/front-alpi.css') }}" rel="stylesheet" type="text/css" />
    <link href='https://fonts.googleapis.com/css?family=Bubblegum+Sans' rel='stylesheet' type='text/css'>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('medias/js/main/logon.js') }}"></script>
{% endblock %}
{% block title %}Bienvenue sur L@ndecoles !{% endblock %}

{% block body %}
    <div class="background-login"></div>
    <div class="container-fluid container">
        <div class="container-logon">
            <div class="row-fluid">
                <div class="span12">
                    <div class="header-login">
                        <img class="logo" src="{{ asset('/medias/images/logon/logo-beneylu-school.png') }}" alt="BeneyluSchool" />
                        <img class="logo" src="{{ asset('/medias/images/logon/alpi/logo.png') }}" alt="Alpi" />
                        <img class="logo" id="logo_dsden" src="{{ asset('/medias/images/logon/alpi/logo_dsden.jpg') }}" alt="Dsden" />
                        <h1><span>Bienvenue sur </span><br /> L@ndecoles</h1>
                        <img class="content-connection" src="{{ asset('/medias/images/logon/vignette.png') }}"/>
                        <div class="fanion-text">Connecte-toi pour avoir accès à L@ndecoles</div>
                        <div class="shadow"></div>
                        <div class="rope left"></div>
                        <div class="rope right"></div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
   {#            <div class="span8">
                <div class="content-login">
                  <div class="row-fluid notice-message">
                    <div class="alert alert-success bns-alert">
                      <strong>La navigation a changé dans L@ndecoles !</strong><br>
                      Parents et élèves, une nouvelle présentation de votre ENT en vidéo :
                      <div class="jim"></div>
                    </div>
                  </div>
                  <div class="intro-login">
                    <a href="https://ent2d.ac-bordeaux.fr/mediacad/m/6597/d/m/e/mp4" target="_blank">
                      <img src="{{ asset('/medias/images/logon/alpi/nouveaudock.png') }}" alt="La classe de la Beneylu School" />
                    </a>
                    <p>
                      L@ndecoles est un Espace Numérique de Travail (ENT) spécialement conçu pour le premier degré.
                    </p>
                  </div>
                </div>
              </div> #}

              <div class="span8">
                <div class="content-login">
                  <div class="title-login">
                    <h2>&nbsp</h2>
                  </div>
                  <div class="intro-login">
                    <img src="{{ asset('/medias/images/logon/classroom.png') }}" alt="La classe de la Beneylu School" />
                     <p>
                       L@ndecoles est un Espace Numérique de Travail (ENT) spécialement conçu pour le premier degré.
                     </p>
                  </div>
                </div>
              </div>

                <div class="span4">
                    <div class="content-logon">
                        <iframe id="logon-iframe" src="{{ redirectUrl }}" width="100%" scrolling="auto" marginheight="0" marginwidth="0" frameborder="0">
                            Votre navigateur ne semble pas compatible
                        </iframe>

                        <div class="browser-error" style="display: none">
                            <h3>Votre navigateur ne semble pas à jour</h3>
                            <h4>Vous pouvez le mettre à jour en cliquant sur les liens ci-dessous.</h4>
                            <div class="browser-list">
                                <a href="https://www.google.com/intl/fr/chrome/browser/" target="_blank">
                                    <img class="browser" src="{{ asset('/medias/images/logon/chrome.png') }}" alt="Google Chrome" >
                                </a>
                                <a href="http://www.mozilla.org/fr/firefox/new/" target="_blank">
                                    <img class="browser" src="{{ asset('/medias/images/logon/firefox.png') }}" alt="Mozilla Firefox" >
                                </a>
                                <a href="http://www.apple.com/fr/safari/" target="_blank">
                                    <img class="browser" src="{{ asset('/medias/images/logon/safari.png') }}" alt="Apple Safari" >
                                </a>
                                <a href="http://windows.microsoft.com/fr-FR/internet-explorer/products/ie/home" target="_blank">
                                    <img class="browser" src="{{ asset('/medias/images/logon/internet-explorer.png') }}" alt="Microsoft Internet Explorer" >
                                </a>
                            </div>
                        </div>
                        {% if enable_register %}
                            <div class="not-registered">
                                <div class="shadow"></div>
                                <h3>Vous n'êtes pas encore inscrit ?</h3>
                                <p>
                                    L'inscription à Beneylu School est rapide et gratuite, n'hésitez plus !
                                </p>
                                <a href="{{ path('registration_free') }}">Inscrire ma classe</a>
                                <div class="clearfix"></div>
                            </div>
                        {% endif %}
                        <div class="password-forget">
                            <a href="{{ path('user_password_reset') }}">Mot de passe oublié ?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-logon">
            {% include "BNSAppMainBundle:Logon:logon_alpi_footer_links.html.twig" %}
        </div>
    </div>
{% endblock body %}
