{% extends '::base.html.twig' %}

{% block css %}
    {{ parent() }}
    <link href="{{ asset('/medias/css/logon/front-ticeduc.css') }}" rel="stylesheet" type="text/css" />
    <link href='https://fonts.googleapis.com/css?family=Fugaz+One' rel='stylesheet' type='text/css'>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('medias/js/main/logon.js') }}"></script>
    <script type="text/javascript" src="{{ asset('medias/js/jquery.slimscroll.min.js') }}"></script>
{% endblock %}

{% block title %}Bienvenue sur l'ENT CIME{% endblock %}

{%  set iframeParams = '&fromTemplate=cime' %}

{% block body %}
    <div class="background-login bordeaux" style="background : url('/medias/images/logon/cime/bg_login_new.png') no-repeat scroll center; min-height: 660px;">
        <div class="container-fluid container">
            <div class="container-logon">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="header-login">
                            <img src="/medias/images/logon/cime/title.png" />
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    {% if viewParams.news is defined and viewParams.news|length > 0 %}
                        <div class="span5 news">
                            <div class="news-content" style="margin-top: 25px;">
                                <div class="news-scroll">
                                    {% include 'BNSAppMainBundle:Logon:logon_ticeduc_new_list.html.twig' with {'news' : viewParams.news } %}
                                </div>
                            </div>
                            <br clear='all' />
                        </div>
                    {% endif %}
                    <div class="span4 connexion">
                        <div class="content-logon">
                            <div class="iframe-container">
                                <span class="title" style="font-size: 24px;"">Je me connecte avec :</span>
                                <iframe id="logon-iframe" src="{{ redirectUrl ~ iframeParams }}" width="100%" height="340px" scrolling="auto" marginheight="0" marginwidth="0" frameborder="0">
                                    Votre navigateur ne semble pas compatible
                                </iframe>
                            </div>
                            <div class="password-forget">
                                <a href="{{ path('user_password_reset') }}">Mot de passe oublié ?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <div class="container-fluid container">
        <div class="row-fluid footer-content">
            <div class="span12">
                <div class="footer-logon">

                    {% if viewParams.hasAlert is defined and viewParams.hasAlert == true %}
                        <div class="alert"  style="margin-top: -100px;">
                            <h2 class="alert-title">{{ viewParams.alertTitle }}</h2>
                            <p>
                                {{ viewParams.alertContent }}
                            </p>
                        </div>
                    {%  endif %}

                    <a href="http://www.beneyluschool.com"  title="Beneylu School" target="_blank">
                        <img src="/medias/images/logon/cime/beneyluschool.png" />
                    </a>
                    <a href="http://www.ac-aix-marseille.fr"  title="Rectorat de l'Académie Aix-Marseille" target="_blank">
                        <img src="/medias/images/logon/cime/rectorat.png" />
                    </a>
                    <a href="http://www.marseille.fr"  title="Ville de Marseille" target="_blank">
                        <img src="/medias/images/logon/cime/marseille.png" />
                    </a>
                    <a href="http://espace.cime.org"  title="Espace Cime" target="_blank">
                        <img src="/medias/images/logon/cime/espace_cime.png" />
                    </a>
                </div>
                <div class="last-footer">
                    {% include "BNSAppMainBundle:Logon:footer_links.html.twig" %}
                </div>
            </div>
        </div>



    </div>
    <script type="text/javascript">
        $(function(){
            $('.news-scroll').slimScroll({
                height: '344px'
            });
        });
    </script>

{% endblock body %}
