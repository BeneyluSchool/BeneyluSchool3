{% extends '::base.html.twig' %}

{% block css %}
    {{ parent() }}
    <link href='https://fonts.googleapis.com/css?family=Fugaz+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Bree+Serif' rel='stylesheet' type='text/css'>
    <link href="{{ asset('/medias/css/logon/front-main.css') }}" rel="stylesheet" type="text/css" />
    <!--[if lt IE 9]>
    <style>
        .layout .header .box-transparent{
            background-color: white;
        }
    </style>
    <![endif]-->

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('medias/js/main/logon.js') }}"></script>
    <script type="text/javascript">
        $(function(){

            $('#search-screenshot').keyup (function(){
                if($(this).val() == "")
                {
                    $('.screenshot').show('slow');
                }else{
                    $(".screenshot > a > span.keywords:not(:contains('" + $(this).val().toLowerCase() + "'))").parents('.screenshot').hide();
                }
            });
        });
    </script>
{% endblock %}

{% block analytics %}
    {{ parent() }}
    {% if needAnalyticsLogout %}
        <script type="text/javascript">
            $(function(){
                setTimeout(function(){
                    analytics.user().traits({});
                    analytics.group().traits({});
                }, 1500);
            });
        </script>
    {% endif %}
{% endblock %}

{% block title %}Me connecter à Beneylu School{% endblock %}

{% block meta_description %}Si vous avez un compte Beneylu School, c'est la bonne adresse pour vous connecter. Sinon visitez plutôt http://beneylu.com/school{% endblock %}

{%  set iframeParams = '&fromTemplate=main' %}

{% block body_class %}{{ parent() }} ticeduc-home{% endblock %}

{% block body %}
    <div class="layout layout-column">
        <div class="content">
            <div class="container">
                <div class="homes">
                    <div class="title row">
                        <div class="span7">
                            <img src="{{ asset('/medias/images/logon/ticeduc/logo.png') }}" class="logo" />
                            <h3>Je retrouve mon espace numérique de travail</h3>
                        </div>
                    </div>
                    <div class="screenshots">

                        {% set screenshots =
                        {
                        'bassens'           : {'logoUrl' : 'http://www.bordeaux.fr/', 'cityLabel' : 'Bassens'},
                        'blanquefort'       : {'logoUrl' : 'http://www.ville-blanquefort.fr/', 'cityLabel' : 'Blanquefort'},
                        'bordeaux'          : {'logoUrl' : 'http://www.bordeaux.fr/', 'cityLabel' : 'Bordeaux'},
                        'le-bouscat'           : {'logoUrl' : 'http://www.mairie-le-bouscat.fr/', 'cityLabel' : 'Le Bouscat'},
                        'mairie-bruges'            : {'logoUrl' : 'http://www.mairie-bruges.fr/', 'cityLabel' : 'Bruges'},
                        'merignac'          : {'logoUrl' : 'http://www.merignac.com/', 'cityLabel' : 'Merignac'},
                        'pessac'            : {'logoUrl' : 'http://www.pessac.fr/', 'cityLabel' : 'Pessac'},
                        'smj'               : {'logoUrl' : 'http://www.saint-medard-en-jalles.fr/', 'cityLabel' : 'Saint Médard en Jalles'},
                        'villenavedornon' : {'logoUrl' : 'http://www.villenavedornon.fr/', 'cityLabel' : "Villenave d'Ornon"}
                        }
                        %}

                        <div class="row">
                            {% for key, screenshot in screenshots %}
                            {% if loop.index0 % 3 == 0 and loop.index0 != 0 %}
                        </div><div class="row">
                            {% endif %}

                            <div class="screenshot span4">
                                <a href="https://{{ key }}.ticeduc.fr/ent">
                                    <img src="{{ asset('/medias/images/logon/home/homes/ticeduc/' ~ key ~ '.png') }}" />

                                                <span>
                                                    {{ screenshot['cityLabel'] }}
                                                </span>

                                </a>
                            </div>

                            {% endfor %}
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

        <div class="footer hidden-phone hidden-tablet">
            <div class="container">
                <div class="footer-content row">
                    <div class="span2">
                        <img src="{{ asset('/medias/images/logon/beneylu-school.png') }}" />
                    </div>
                    <div class="span4">
                        Vous ne trouvez pas l'information que vous cherchez sur le site ?
                        <a href="http://network.beneyluschool.com/contact.html" target="'_blank" class="contact">
                            Contactez nous ici
                        </a>

                        <span class="copyright">
                            © Beneylu School {{ "now"|date("Y") }} Tous droits réservés - Beneylu est une marque déposée.
                        </span>
                    </div>
                    <div class="span6">
                        <ul class="links">
                            <li>Déclaration CNIL 1321978</li>
                            <li>
                                <a href="http://beneylu.com/school" target="'_blank" class="contact">
                                    Découvrir Beneylu School
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

{% endblock body %}

