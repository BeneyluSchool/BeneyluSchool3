{% trans_default_domain "MAIN" %}
<html>
<head>
  <title>{{ 'TITLE_BENEYLU_CONNECTION_DENY'|trans({'%beneylu_brand_name%': parameter('beneylu_brand_name')}) }}</title>
  {% if redirectHome %}
    <script type="text/javascript">
      window.parent.location.href = '{{ url('home', {}, true) }}';
    </script>
  {% else %}
      <link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet" type="text/css" />
      <link href='https://fonts.googleapis.com/css?family=Bubblegum+Sans' rel='stylesheet' type='text/css'>
      <link href="{{ asset('/medias/css/bootstrap.css') }}" rel="stylesheet" type="text/css" />
      <link href="{{ asset('/medias/css/logon/front.css') }}" rel="stylesheet" type="text/css" />
  {% endif %}
</head>
<body class="refresh-container">
{% if not redirectHome %}
<div class="layer">
  <div class="message">
    <div class="alert alert-error bns-alert close-error">
      {{ errorMessage | trans }}
    </div>
    {% if redirectUri %}
      <a class="btn btn-retry" href="{{ redirectUri }}" target="_top">{{ 'main.oauth.error.go_to_your_class' | trans }}</a>
    {% elseif retry %}
      <a class="btn btn-retry" href="{{ path('home') }}" target="_top">{{ 'main.oauth.error.try_again' | trans }}</a>
    {% endif %}
  </div>
</div>
{% endif %}
</body>
</html>
