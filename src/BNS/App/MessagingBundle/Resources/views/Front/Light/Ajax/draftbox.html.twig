
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
</head>

{% for message in messages %}
	{% if loop.first == true %}
		{% include 'BNSAppMessagingBundle:Front/Light:block_title.html.twig' with {'title': "Brouillons"} %}
			<div class="messaging-no-overflow">
				<div class="container-message">
					<div class="content-message">
	{% endif %}
	{% include 'BNSAppMessagingBundle:Front/Light:block_message_draft.html.twig' with {'message': message } %}
	{% if loop.last == true %}
				</div>
			</div>
		</div>
	{% endif %}
{% else %}
	{% include 'BNSAppMessagingBundle:Front/Light:block_title.html.twig' with {'title': "Pas de brouillon"} %}
{% endfor %}

{% include 'BNSAppMessagingBundle:Front/Light:block_paginate.html.twig' with {'limit': paginate_limit, 'total': nb_draft_messages, 'currentPage': page } %} 

