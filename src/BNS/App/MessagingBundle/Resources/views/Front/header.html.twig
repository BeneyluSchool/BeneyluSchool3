                            <button class="btn write-new-msg btn-messaging answer"><span class="background-button answer"><span class="icons-new-message"></span>{% trans %}BUTTON_ANSWER{% endtrans %}</span></button>
                            <button class="btn write-new-msg btn-messaging send"><span class="background-button send"><span class="icons-new-message"></span>{% trans %}BUTTON_SEND{% endtrans %}</span></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="big-post"></div>
                <div class="small-bar"></div>
            </div>
        </div>
