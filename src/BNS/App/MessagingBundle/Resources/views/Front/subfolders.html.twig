<ol>
    {% for subfolder in folder.childs %}
        <a href="#" id="{{ subfolder.functionalName }}" class="mailFolder no-actif">{{ subfolder.name }}</a>
        {% if subfolder.childs != null %}
            {% render "BNSAppMessagingBundle:Front:subfolders" with { 'parent' : subfolder}%}
        {% endif %}
    {% endfor %}
</ol>