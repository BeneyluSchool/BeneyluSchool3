    <column name="published_end_at" type="TIMESTAMP" required="false" />
    <column name="is_pinned" defaultValue="false" required="true" type="BOOLEAN" />
    <column name="is_all_schools" defaultValue="false" required="true" type="BOOLEAN" />
    <column name="has_notified" defaultValue="false" required="true" type="BOOLEAN" />
