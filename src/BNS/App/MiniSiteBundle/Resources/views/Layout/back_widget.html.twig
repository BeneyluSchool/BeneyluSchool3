<div class="widget" id="widget-{{ widget.getId() }}" data-input-names="title,{{ widget.getPropertiesAsString() }},_token">
	{% block widget_header %}
		<div class="btn-group">
			<div class="header btn-info">
				{{ form_widget(form.title, {'attr': {'placeholder': 'Titre du widget'}}) }} <span class="caret"></span><p>{{ widget.getMiniSiteWidgetTemplate().getLabel() }}</p>
			</div>
		</div>
	{% endblock widget_header %}

	{% block widget_container %}
		<div class="widget-content">
			{% block widget_content %}
				Add my content please!
			{% endblock widget_content %}

			{% block widget_buttons %}
				<input type="submit" class="btn validate" value="Valider" id="submit-widget-{{ widget.getId() }}" />
				<a class="btn btn-danger delete" id="delete-widget-{{ widget.getId() }}" href="{{ path('minisite_manager_custom_widget_delete_confirm', {'widgetId': widget.getId()}) }}">{% trans %}MiniSite.Back.Custom.Widgets.Delete{% endtrans %}</a>
			{% endblock widget_buttons %}
		</div>
	{% endblock widget_container %}
</div>