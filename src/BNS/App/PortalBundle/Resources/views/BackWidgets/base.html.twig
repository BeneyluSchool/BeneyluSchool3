{% trans_default_domain "PORTAL" %}
<div class="widget banner item">

    <div class="header">
        <div class="buttons-container">
            {% block enable %}{% endblock %}
            <a href="#" class="btn bns-notice btn-16 small move">
                <span class="icons-16 generate-icon"></span>
                {{ 'LINK_MOVE' |trans |desc('<strong>DÃ©placer</strong>') |raw }}
            </a>
            <a href="#" class="btn bns-danger btn-16 small delete-widget">
                <span class="icons-16 cancel-icon"></span>
                {{ 'LINK_DELETE' |trans |desc('<strong>Supprimer</strong>') |raw }}
            </a>
        </div>
