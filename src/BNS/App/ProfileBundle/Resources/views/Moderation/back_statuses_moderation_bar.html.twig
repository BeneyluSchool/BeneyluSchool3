{% trans_default_domain "PROFILE" %}
{% if feed.getStatus() == 'PENDING_VALIDATION' %}
  <bns-button-group layout="row" layout-sm="column" layout-align="end center">
    {{ components.button('LINK_VALIDATE'|trans |raw, {
      intent: 'accent',
      raised: true,
      size: 'sm',
      hover : true,
      attr : {'class' : 'feed-moderation', 'data-filter-status' : 'VALIDATED', 'id' : feed.getId()}
    }) }}
    {{ components.button('LINK_DENY'|trans, {
      intent: 'warn',
      raised: true,
      size: 'sm',
      hover : true,
      attr : {'class' : 'feed-moderation', 'data-filter-status' : 'REFUSED', 'id' : feed.getId()}
    }) }}
    {{ components.button('LINK_DENY_DELETE'|trans |desc('<strong>Valider</strong>') |raw, {
      intent: 'warn',
      raised: true,
      size: 'sm',
      hover: true,
      attr : {'class' : 'feed-moderation', 'data-filter-status' : 'DELETED', 'id' : feed.getId()}
    }) }}
  </bns-button-group>
{% elseif feed.getStatus() == 'VALIDATED' %}
  <bns-button-group layout="row" layout-sm="column" layout-align="end center">
    {{ components.button('LINK_GO_TO_MODERATION'|trans |raw, {
      intent: 'accent',
      raised: true,
      size: 'sm',
      hover : true,
      attr : {'class' : 'md-care feed-moderation', 'data-filter-status' : 'PENDING_VALIDATION', 'id' : feed.getId()}
    }) }}
    {{ components.button('LINK_DENY'|trans, {
      intent: 'warn',
      raised: true,
      size: 'sm',
      hover : true,
      attr : {'class' : 'feed-moderation', 'data-filter-status' : 'REFUSED', 'id' : feed.getId()}
    }) }}
    {{ components.button('LINK_DENY_DELETE'|trans |desc('<strong>Valider</strong>') |raw, {
      intent: 'warn',
      raised: true,
      size: 'sm',
      hover: true,
      attr : {'class' : 'feed-moderation', 'data-filter-status' : 'DELETED', 'id' : feed.getId()}
    }) }}
  </bns-button-group>
{% else %}
  <bns-button-group layout="row" layout-sm="column" layout-align="end center">
    {{ components.button('LINK_VALIDATE'|trans |raw, {
      intent: 'accent',
      raised: true,
      size: 'sm',
      hover : true,
      attr : {'class' : 'feed-moderation', 'data-filter-status' : 'VALIDATED', 'id' : feed.getId()}
    }) }}
    {{ components.button('LINK_GO_TO_MODERATION'|trans, {
      intent: 'accent',
      raised: true,
      size: 'sm',
      hover : true,
      attr : {'class' : 'md-care feed-moderation', 'data-filter-status' : 'PENDING_VALIDATION', 'id' : feed.getId()}
    }) }}
    {{ components.button('LINK_DELETE_DEFINITIVELY'|trans |raw, {
      intent: 'warn',
      raised: true,
      size: 'sm',
      hover: true,
      attr : {'class' : 'feed-moderation', 'data-filter-status' : 'DELETED', 'id' : feed.getId()}
    }) }}
  </bns-button-group>
{% endif %}
