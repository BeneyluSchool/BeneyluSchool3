<script type="text/javascript" src="{{ asset('/medias/js/profile/preferences.js') }}"></script>
<div class="content-right">
    <div class="like">
        <div class="content-box content-color">
            <div class="title">
                <span class="ico-like"></span>
                <h2>
                    {% if is_my_preferences is defined and is_my_preferences == false %}
                        Aime
                    {% else %}
                        J'aime
                    {% endif %}
                </h2>
            </div>
            <ul class="test">
                <li class="no-item hide"><i>
                    {% if is_my_preferences is defined and is_my_preferences == false %}
                        N'a pas encore choisi
                    {% else %}
                        Je n'ai pas encore écris ce que j'aime
                    {% endif %}
                </i></li>
                {% for preference in user.getProfile().getProfilePreferences() %}
                    {% if preference.isLike() %}
                        {% include 'BNSAppProfileBundle:Preferences:row_preference_item.html.twig' with {'preference': preference, 'editable': editable} %}
                    {% endif %}
                {% endfor %}
                <script type="text/javascript">
                    showNoItemLabel('like');
                </script>
            </ul>
            
                
            {% if editable %}
                <form class="add-preference-form" action="{{ path('BNSAppProfileBundle_back_preferences_add', {'userSlug': user.getSlug()}) }}" method="POST">
                    <input type="hidden" name="preference_islike" value="1" />
                    <input type="text" name="preference_item" class="add-feelings" placeholder="Ajouter un nouveau J'aime" /> <input type="submit" class="btn btn-info" value="Ajouter" />
                </form>
            {% endif %}
        </div>
    </div>
        
    <div class="dislike">
            
        <div class="content-box content-color">
            <div class="title">
                <span class="ico-dislike"></span>
                <h2>
                    {% if is_my_preferences is defined and is_my_preferences == false %}
                        N'aime pas
                    {% else %}
                        Je n'aime pas
                    {% endif %}
                </h2>
            </div>
            <ul>
                <li class="no-item hide"><i>
                    {% if is_my_preferences is defined and is_my_preferences == false %}
                        N'a pas encore choisi
                    {% else %}
                        Je n'ai pas encore écris ce que je n'aime pas
                    {% endif %}
                </i></li>
                {% for preference in user.getProfile().getProfilePreferences() %}
                    {% if (preference.isLike() == false) %}
                        {% include 'BNSAppProfileBundle:Preferences:row_preference_item.html.twig' with {'preference': preference, 'editable': editable} %}
                    {% endif %}
                {% endfor %}
                <script type="text/javascript">
                    showNoItemLabel('dislike');
                </script>
            </ul>
            
            {% if editable %}
                <form class="add-preference-form" action="{{ path('BNSAppProfileBundle_back_preferences_add', {'userSlug': user.getSlug()}) }}" method="POST">
                    <input type="hidden" name="preference_islike" value="0" />
                    <input type="text" name="preference_item" class="add-feelings" placeholder="Ajouter un nouveau Je n'aime pas" /> <input type="submit" class="btn btn-info" value="Ajouter" />
                </form>
            {% endif %}
        </div>
    </div>

</div>

{% if editable %}
    <script type="text/javascript" src="{{ asset('/medias/js/profile/back-preferences.js') }}"></script>
{% endif %}  
    