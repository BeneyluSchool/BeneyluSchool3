{% extends '::base.html.twig' %}
{% trans_default_domain "REGISTRATION" %}
{% block css %}
	{{ parent() }}

	<link rel="stylesheet" href="{{ asset('/medias/css/registration/front.css') }}" />
	<link href='https://fonts.googleapis.com/css?family=Bubblegum+Sans' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Fugaz+One' rel='stylesheet' type='text/css'>
{% endblock css %}

{% block body %}
	<div class="background-registration"></div>
	<div class="container-header-registration">
		<div class="container-fluid container">
			<div class="row-fluid">
				<div class="span12">
					{% block header_logo %}
						<a href="{{ path('home') }}">
							{% if parameter('graphic_chart') != false %}
								<img src="{{ asset('medias/images/main/graphic_chart/' ~ parameter('graphic_chart').name ~ '/logo.png') }}" style="height: 80px;" />
							{% else %}
								<img src="{{ asset('/medias/images/registration/beneyluschool.png') }}" />
							{% endif %}
						</a>
					{% endblock header_logo %}
					{% block header %}Add your confirmation title!{% endblock header %}
					<div class="pattern"></div>
				</div>
			</div>
		</div>
	</div>
	{% block big_content %}
		<div class="container container-fluid container-fluid-registration {% block confirmation_type %} confirmation {% endblock %}">
			<div class="row-fluid">
				<div class="span7">
					<div class="content-text-confirmation">
						<div class="content-text-confirmation">
							{% block content %}Add your confirmation content!{% endblock content %}
						</div>
					</div>
				</div>
				<div class="span5">
					<div class="content-beneylu-jim">
						<div class="beneylu-jim {% block beneylu_jim %}{% endblock %}"></div>
					</div>
				</div>
			</div>
			<div class="row-fluid submit return">
				<a href="{{ path('home') }}" class="btn btn-success">{{ 'LINK_BACK_TO_HOME'|trans |desc('Retour Ã  l\'accueil') }}</a>
			</div>
		</div>
	{% endblock big_content %}
{% endblock body %}
