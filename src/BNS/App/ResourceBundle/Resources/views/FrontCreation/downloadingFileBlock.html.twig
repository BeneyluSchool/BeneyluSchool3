{% raw %}

<script id="template-download" type="text/x-tmpl">
	{% for (var i=0, file; file=o.files[i]; i++) { %}
		<tr id="temp-{%=file.name%}" class="template-download fade temp-file {% if (file.error) { %} error {% } %}">
			{% if (file.error) { %}
				<td colspan="7" class="alert alert-error">
					<b>{%=file.name%}</b> n'a pû être envoyé
					{% if (file.error == 'notAllowed'){ %}
						car il n'y a plus assez d'espace de stockage.
					{% } %}  
					
					{% if(file.error == 'maxFileSize'){ %}
						car le fichier dépasse la taille maximale autorisée (20 Mo).
					{% } %}
				</td>
			{% } else { %}
			{% } %}
		</tr> 
	{% } %}
</script>

{% endraw %}