{% block content %}
	{% block download %}

		<div class="content-file-resource">
			{% if resource.getFileMimeType() == 'application/pdf' %}
				<iframe class="pdf-iframe" src="https://docs.google.com/viewer?url={{ rm.getTempUrl() }}&embedded=true"></iframe>
			{% else %}
				{% if with_image is not defined or (with_image is defined and with_image == true) %}
					{% if size is not defined %}
						{% set size = "small" %}
					{% endif %}
					{% if class is not defined %}
						{% set class = "span5" %}
					{% endif %}

					<img id="" class="{{ class }}" src="{{ getResourceImageUrl(resource,size) }}" />
					<div class="clearfix"></div>
				{% endif %}
				{% if with_title is not defined or (with_title is defined and with_title == true) %}
					<h2>{{ resource.label }}</h2>
				{% endif %}
			{% endif %}

			<div class="download">
				<a href="{{ path('BNSAppResourceBundle_download', { 'resourceSlug': resource.getSlug() }) }}" class="btn bns-notice btn-24 large" target='_blank'>
					<span class="icons-24 preview-icon"></span>
					Télécharger
				</a>
			</div>
		</div>

	{% endblock %}
{% endblock %}