{% trans_default_domain "SCHOOL" %}
{% extends 'BNSAppSchoolBundle:Layout:manager.html.twig' %}

{% block title %}
  {% trans %}TITLE_SCHOOL_CUSTOMIZE{% endtrans %}
{% endblock %}

{% block sidebar %}
    {% include "BNSAppSchoolBundle:Sidebar:sidebar.html.twig" with {"page" : "custom" } %}
{% endblock sidebar %}

{% block header %}
	<div class="header-buttons">
		<div class="inner-header">
			<div class="container container-fluid">
				<div class="row-fluid">
					<div class="span8">
						<a href="{{ path('BNSAppSchoolBundle_back') }}" class="btn bns-notice btn-24 medium-return button-return">
							<span class="icons-24 back-icon"></span>
              {{ 'LINK_BACK_TO_SCHOOL'|trans |raw }}
						</a>
						<a href="{{ path('BNSAppSchoolBundle_back') }}" class="btn bns-danger btn-24 medium-return">
							<span class="icons-24 cancel-icon"></span>
                            {{ 'LINK_CANCEL_MODIFICATION'|trans |raw }}

						</a>
					</div>
					<div class="span4 align-right">
						<a href="#" class="btn bns-success validate-medium btn-24 medium submit-custom-school-form">
              <span class="icons-24 validate-icon"></span><strong>{% trans %}LINK_SAVE_PARAMETERS{% endtrans %}</strong>
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block content %}
	<div class="container-classroom">
		<div class="content-custom">
			<form action="{{ path('BNSAppSchoolBundle_back_custom') }}" method="POST" id="custom-school-form" {{ form_enctype(form) }}>

                <div class="news-title">
                  <h1 class="dashboard">{% trans %}TITLE_WRITE_WELCOME_MESSAGE_ON_BLACKBOARD{% endtrans %}</h1>
				</div>

                {% include 'BNSAppMainBundle::notice.html.twig' %}

				<div class="form-home-message">
					{{ form_widget(form.home_message, {'attr': {'class': 'custom-classroom board-message'}}) }}
					{{ form_errors(form.home_message) }}
				</div>

        <div class="news-title">
          <h1 class="dashboard">{{ 'TITLE_EDIT_SCHOOL_ADDRESS'|trans }}</h1>
        </div>

        <div class="row-fluid">
          <div class="span12">
            {{ form_label(form.address) }}
          </div>
        </div>
        <div class="row-fluid">
          <div class="span12">
            {{ form_widget(form.address) }}
            {{ form_errors(form.address) }}
            {% if form.address.vars.errors|length > 0 %}
              <div class="alert alert-danger bns-alert">
                {{ form_errors(form.address) }}
                <div class="jim"></div>
              </div>
            {% endif %}
          </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            {{ form_label(form.city) }}
          </div>
        </div>
        <div class="row-fluid">
          <div class="span12">
            {{ form_widget(form.city) }}
            {{ form_errors(form.city) }}
            {% if form.city.vars.errors|length > 0 %}
              <div class="alert alert-danger bns-alert">
                {{ form_errors(form.city) }}
                <div class="jim"></div>
              </div>
            {% endif %}
          </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            {{ form_label(form.zipcode) }}
          </div>
        </div>
        <div class="row-fluid">
          <div class="span12">
            {{ form_widget(form.zipcode) }}
            {{ form_errors(form.zipcode) }}
            {% if form.zipcode.vars.errors|length > 0 %}
              <div class="alert alert-danger bns-alert">
                {{ form_errors(form.zipcode) }}
                <div class="jim"></div>
              </div>
            {% endif %}
          </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            {{ form_label(form.country) }}
          </div>
        </div>
        <div class="row-fluid">
          <div class="span12">
            <div>
            {{ form_widget(form.country) }}
            </div>
            {% if form.country.vars.errors|length > 0 %}
              <div class="alert alert-danger bns-alert">
                {{ form_errors(form.country) }}
                <div class="jim"></div>
              </div>
            {% endif %}
          </div>
        </div>

				{{ form_rest(form) }}
			</form>
		</div>
	</div>
{% endblock %}
