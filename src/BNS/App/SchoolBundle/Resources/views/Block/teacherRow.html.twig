{% trans_default_domain "SCHOOL" %}
{% set invited = invited|default(false) %}
<div class="item {{ invited ? 'disabled' }}">
	<div class="vertical-separator {{ invited ? 'orange' : 'green' }}"></div>
	<div class="buttons-container">
		{% if invited %}
			<span>{% trans %}LABEL_PENDING_INVITATION{% endtrans %}</span>
		{% else %}
			<a href="{{ path('BNSAppSchoolBundle_back_user_sheet', {'userSlug': teacher.getSlug()}) }}" class="btn bns-notice btn-16 small right btn-visualisation">
				<span class="icons-16 arrow-right-icon right"></span>
				<strong>{% trans %}LINK_SEE_CARD{% endtrans %}</strong>
			</a>
		{% endif %}
	</div>
	<div class="header">
		<img class="avatar" src="{{ avatar(teacher, 'thumbnail') }}" alt="" />
		<p class="name">{{ teacher.getFullName() }}</p>
		<p class="informations">
			{{ teacher.getEmail() }}
            <b>{{ has_role_in_group(teacher, 'ENT_REFERENT') ? " - " ~ 'ENT_REFERENT'|trans  : "" }}
            {{ has_role_in_group(teacher, 'DIRECTOR') ? " - " ~ 'DIRECTOR'|trans : "" }}</b>
		</p>
	</div>
</div>
