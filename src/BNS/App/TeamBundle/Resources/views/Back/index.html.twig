{% trans_default_domain "TEAM" %}
{% extends 'BNSAppTeamBundle:Layout:manager.html.twig' %}

{% block content %}
    <div class="span3"></div>
    <div class="span9">
        <div class="content">
            <div class="row-fluid">
                <div class="span12">
                    <h1>{% trans %}TEAM_ADMIN_PAGE{% endtrans %}</h1>

                    <div class="form-edit-home-message">
                        <h3>{% trans %}WELCOME_MESSAGE{% endtrans %}</h3>
                        <form action="{{ path('BNSAppClassroomBundle_back') }}" method="POST" {{ form_enctype(form) }}>
                            {{ form_widget(form.homeMessage) }}
                            {{ form_rest(form) }}
                            <input type="submit" class="btn btn-success" value={{ 'INPUT_UPDATE'|trans |desc('Mettre à jour !') }} />
                        </form>
                    </div>

                    <h3>{% trans %}MY_APPS_AND_STATES{% endtrans %}</h3>
					{{ render(controller('BNSAppMainBundle:Module:moduleActivation', { 'roles': activation_role } )) }}
                    {#<table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Module</th>
                                <th>Les élèves membres de l'équipe "{{ team.getLabel() }}"</th>
                                <th>Les autres élèves de la classe "{{ classroom.getLabel() }}"</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for module in activableModules %}
                                <tr>
                                    <td>{{ module.getUniqueName() }}</td>
                                    <td><span id="module_unique_name-{{ module.getUniqueName() }}-for_role_unique_name-MEMBER" class="btn-change-module-state{% if module.isActivatedForMember() %} active{% else %} inactive{% endif %}"></span></td>
                                    <td><span id="module_unique_name-{{ module.getUniqueName() }}-for_role_unique_name-OTHER" class="btn-change-module-state{% if module.isActivatedForOther() %} active{% else %} inactive{% endif %}"></span></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>#}
                </div>
            </div>
    </div>
{% endblock %}
