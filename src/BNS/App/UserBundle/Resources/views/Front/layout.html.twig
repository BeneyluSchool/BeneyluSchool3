{% extends '::base.html.twig' %}

{% block css %}
    {{ parent() }}
    <link href='https://fonts.googleapis.com/css?family=Audiowide' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{{ asset('/medias/css/user/front.css') }}" />
{% endblock css %}

{% block javascripts %}
    {{ parent() }}
{% endblock javascripts %}

{% block body_attr %}{{ parent() }} style="padding-top:60px;padding-bottom:60px;box-sizing:border-box;"{% endblock %}

{% block body %}
    <div class="office"></div>
  <div class="navbar-compatible-container">
    <div class="container container-fluid content-prehome">

        {% block form_start %}
        <form action="" method="POST" novalidate>
        {% endblock %}

            <div class="row-fluid content-top">
                <div class="span7">
                    <div class="title">
                        {% block content_title %}{% endblock %}
                    </div>

                    <div class="inner-content">
                        {% block content %}{% endblock %}
                    </div>
                </div>
            </div>

            <div class="row-fluid">
                {% block buttons %}{% endblock %}
            </div>

        {% block form_end %}
        </form>
        {% endblock %}

    </div>
  </div>
{% endblock body %}
